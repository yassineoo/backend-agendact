# Environment variables for the AgendaCT Backend

# Database connection
DATABASE_URL="postgresql://postgres:password@localhost:5432/agendact?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Application
PORT=3000
NODE_ENV=development

# Email Configuration (e.g., SendGrid)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
EMAIL_FROM="AgendaCT <noreply@agendact.com>"

# SMS Configuration (Sweego)
SWEEGO_API_KEY=your-sweego-api-key
SWEEGO_SENDER_NAME=AgendaCT

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001
